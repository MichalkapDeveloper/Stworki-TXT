start () { ##    START GRY   START GRY   START GRY   START GRY   START GRY   START GRY   START GRY   START GRY   START GRY   START GRY   START GRY   START GRY
  echo "Jesteś w swoim domku."
  echo "1. W górę"
  echo "2. W dół"
  read -p "Wybierz opcję: " act
  if [ $act == "1" ]; then
    pk
  else
    if [ $act == "2" ]; then
      if [ $rzz = 1 ]; then
        pdr
      else
        pd
      fi
   fi
  fi
}


zip () {
  read money
  echo "Ilość twoich pieniędzy to: "$money
  sleep 2
  clear
}
pk () {
  echo "Jesteś w swoim pokoju."
  echo "1. W dół"
  echo "2. Włącz komputer"
  read -p "Wybierz opcję: " act
  if [ $act == "1" ]; then
    start
  else
    k
  fi
}
pdr () {
  echo "Jesteś przed swoim domkiem. Obok ciebie siedzi zakapturzony ktoś."
  echo
  tutorial
}
tutorial () {
  rzz=0
  echo $sp": Dzień dobry. Jak się nazywasz?"
  read -p "TY: " name
  echo $sp": Cześć "$name"."
  echo
  echo "Nagle przybiega twój kolega(niezły rym, co?)"
  echo
  echo $sp": Dzień dobry. A ty jak się nazywasz?"
  read -p "KOLEGA: " name_kolega
  echo $sp": Cześć "$name_kolega"."
  echo $sp": Czy wiecie co to stworki?"
  two=$name", "$name_kolega
  echo $name_kolega": No... Nie za bardzo."
  echo $name": Raczej coś miłego."
  echo $sp": Acha. Czyli nie wiecie?"
  echo $two": No nie."
  echo $sp": A chcecie?"
  echo $two": Tak."
  echo $sp": Dobrze. Usiądzcie lepiej."
  echo $sp''': Stworki mieszkją wszędzie, tylko większość ludzi ich nie dostrzega.
Żyją w miastach, na łąkach, na wsi, w lesie i w wielu innych miejscach. Stworki dzielą się na 3 grupy.'''
  while true
  do
	echo '''1. Stworki
2. Stworki cośtam-orki
3. Stworki-Pierwotniaczki
O których checie się dowiedzieć więcej?'''
  read act
  if [ $act == "1" ]; then
  stw
  else
    if [ $act == "2" ]; then
    sco
    else
     if [ $act == "3" ]; then
       stpi
     else
       echo $sp": Papa."
       echo
       echo "Następnego dnia."
       echo
       pk 
     fi
    fi
  fi
  done
}




pd () {
  echo "Jesteś przed swoim domkiem."
}




