clear
echo '''
██╗░░░░░██╗███╗░░██╗██╗░░░██╗██╗░░██╗
██║░░░░░██║████╗░██║██║░░░██║╚██╗██╔╝
██║░░░░░██║██╔██╗██║██║░░░██║░╚███╔╝░
██║░░░░░██║██║╚████║██║░░░██║░██╔██╗░
███████╗██║██║░╚███║╚██████╔╝██╔╝╚██╗
╚══════╝╚═╝╚═╝░░╚══╝░╚═════╝░╚═╝░░╚═╝'''
sleep 5
clear
echo "2. Wyłącz"
read -p "Wybierz opcję: " act
if [ $act == "10" ]; then
    dev
  else
    if [ $act == "2" ]; then
     clear
     echo '''
██╗░░░░░██╗███╗░░██╗██╗░░░██╗██╗░░██╗
██║░░░░░██║████╗░██║██║░░░██║╚██╗██╔╝
██║░░░░░██║██╔██╗██║██║░░░██║░╚███╔╝░
██║░░░░░██║██║╚████║██║░░░██║░██╔██╗░
███████╗██║██║░╚███║╚██████╔╝██╔╝╚██╗
╚══════╝╚═╝╚═╝░░╚══╝░╚═════╝░╚═╝░░╚═╝'''
     sleep 3
     clear
     pk
    fi
  fi
pk
}
dev () {
  clear
  echo "1. Zmień ilość pieniędzy"
  read act
  if [ $act == "1" ]; then
    zip
  fi
}
echo "𝗦𝖙𝝎ₒ𝚛𝚔ℹ"
start
